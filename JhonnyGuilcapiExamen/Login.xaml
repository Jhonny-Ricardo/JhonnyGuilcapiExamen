<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JhonnyGuilcapiExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"
               HeightRequest="100" />
            <Entry x:Name="txtUser"
               Placeholder="Ingrese el usuario"></Entry>
            <Entry x:Name="txtPass"
               Placeholder="Ingrese la contraseña" IsPassword="true"></Entry>
            <Button x:Name="btnAbrir"
                Text="Abrir"
                Clicked="btnAbrir_Clicked">
            </Button>    
        </StackLayout>
    </ContentPage.Content>
</ContentPage>